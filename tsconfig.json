{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module":"CommonJS",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "checkJs": false
  },
  "include": [
    "src"
  ]
}
